<header class="row visible-xs-block mobile">

    <div class="col-xs-12 header-logo">

        <a class="logo" href="/" title="{{ 'Home'|t }}" rel="home">
            <img src="/{{ directory }}/dist/assets/uw-medicine-logo-mobile.png"
                 height="17" width="128" alt="UW Medicine">
        </a>

        <div class="pull-right header-toggles">

            <button type="button" class="navbar-toggle"
                    data-toggle="collapse"
                    data-target=".mobile-menu-collapse">
                <i class="fa fa-bars" aria-hidden="true"></i>
            </button>

            <button type="button" class="navbar-toggle"
                    data-toggle="collapse"
                    data-target=".search-collapse">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>


        </div>

    </div>


    <div class="col-xs-12 search-collapse collapse">

        <form class="form-inline"
              action="http://www.uwmedicine.org/search/Pages/default.aspx">
            <div class="input-group">
                <i class="fa fa-search uw-fa" aria-hidden="true"></i>
                <input name="k" title="{{ 'Search'|t }}" type="text"
                       class="form-control"
                       aria-label="Search terms">
                <button type="button" class="navbar-toggle uw-fa"
                        data-toggle="collapse"
                        data-target=".search-collapse">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>
            </div>
        </form>

    </div>


    <div class="col-xs-12 mobile-menu-collapse collapse collapse-horizontal ">

        <div class="row">

            <div class="col-xs-12 header-logo">

                <a class="logo" href="/" title="{{ 'Home'|t }}" rel="home">
                    <img src="/{{ directory }}/dist/assets/uw-medicine-logo.png"
                         height="21" width="158" alt="UW Medicine">
                </a>
                <button type="button" class="navbar-toggle"
                        data-toggle="collapse"
                        data-target=".mobile-menu-collapse">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>

                <div class="uw-bb col-xs-12"></div>
            </div>


            <div class="col-xs-12 main-links">
                {{ drupal_menu('uw-main-navigation', 0, 3) }}
            </div>


            <div class="col-xs-12">
                <div class="col-xs-12 make-gift">
                    <div class="wrapper">

                        <div class="gift-btn btn btn--border btn--primary btn--animated">
                            <div class="uw-ac"></div>
                            <a href="/make-a-gift">{{ 'Make a Gift'|t }}
                                &nbsp;<i class="fa fa-angle-right"
                                         aria-hidden="true"></i></a>
                        </div>

                    </div>

                </div>
            </div>

            <div class="col-xs-12 quick-links">

                <div class="uw-bb col-xs-12"></div>

                {{ drupal_menu('uw-header---quick-links', 1, 1) }}

            </div>

        </div>


    </div>

</header>