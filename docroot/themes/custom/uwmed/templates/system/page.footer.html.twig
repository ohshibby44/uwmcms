{# Footer #}
<div class="foot-feature {{ container }}">

    <div class="row">

        <div class="col-sm-12">{{ page.footer_feature }}</div>

    </div>

</div>

<footer class="container-fluid">

    <div class="row blocks-row">
        <div class="col-sm-6 col-md-4 foot-first">{{ page.footer_first }}</div>
        <div class="col-sm-6 col-md-4 foot-second">{{ page.footer_second }}</div>
    </div>

    <div class="row navigation-row">

        <div class="col-sm-6 col-md-4 foot-first">
            <h2>{{ "Common Resources"|t }}</h2>
            {{ drupal_menu('uw-footer---common-resource') }}</div>

        <div class="col-sm-6 col-md-5 hidden-xs foot-second">
            <h2>{{ "UW Medicine Entities"|t }}</h2>
            {{ drupal_menu('uw-footer---enterprise-enti') }}</div>

        <div class="col-md-3 foot-third">

            <div class="service-icons">
                <a href="https://www.facebook.com/UWMedicineNews"><i class="fa fa-facebook"
                               aria-hidden="true"></i></a>
                <i class="uw-s"></i>
                <a href="https://www.linkedin.com/company/uw-medicine"><i class="fa fa-linkedin"
                               aria-hidden="true"></i></a>
                <i class="uw-s"></i>
                <a href="https://twitter.com/uwmedicine"><i class="fa fa-twitter"
                               aria-hidden="true"></i></a>
                <i class="uw-s"></i>
                <a href="https://www.instagram.com/UWMedicine"><i class="fa fa-instagram"
                               aria-hidden="true"></i></a>
                <i class="uw-s"></i>
                <a href="https://www.youtube.com/user/UWMedicineHealth"><i class="fa fa-youtube-play"
                               aria-hidden="true"></i></a>
            </div>

        </div>

        <div class="col-sm-12 foot-fourth">
            <a class="logo" href="/" title="Home" rel="home">
                <img src="/{{ directory }}/dist/assets/uw-medicine-footer-logo.png"
                     alt="UW Medicine">
            </a>
        </div>
    </div>

    <div class="row enterprise-row">

        <div class="col-xs-12 col-sm-5">
            <p>{{ "Copyright @ @date University of Washington | All rights reserved"
            |t({ '@date': "now"|date('Y') }) }}</p>
        </div>

        <div class="col-xs-12 col-sm-7 pull-right text-right enterprise-nav">
            {{ drupal_menu('uw-footer---service-links') }}
        </div>

    </div>

</footer>
