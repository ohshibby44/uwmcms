{% extends 'field.html.twig' %}
{#

Shows HTML5 player if having
an MP4 and srt caption. Otherwise ,
use field defaults.


#}
{% block content %}

    {% if captionUrl.0.uri is not empty
        and 'mp4' in videoUrl.0.uri %}

{#<pre>#}
    {#{{ dump(videoUrl.0.uri) }}#}
    {#{{ dump(captionUrl.0.uri) }}#}
    {#{{ dump(videoUrl) }}#}
    {#{{ dump(captionUrl) }}#}
{#</pre>#}
        <video style="max-width: 100%;" controls="" preload="metadata" crossorigin="anonymous">
            <source src="{{ videoUrl.0.uri }}" type="video/mp4">
            <track label="English" kind="captions" srclang="en" src="{{ captionUrl.0.uri }}" default="">
        </video>


    {% else %}

        {% include 'field.html.twig' %}

    {% endif %}

{% endblock %}
