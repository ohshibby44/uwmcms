{% set classes = [
node.bundle|clean_class,
node.isPromoted() ? 'is-promoted',
node.isSticky() ? 'is-sticky',
not node.isPublished() ? 'is-unpublished',
view_mode ? view_mode|clean_class,
'clearfix',
] %}

{% set _cli = node.uwmcs_reader_api_values %}

<article{{ attributes.addClass(classes) }}>

    <section class="clinic-header">

        <div class="col-sm-4 left">
            <div class="col-xs-12">
                {{ content.field_clinic_image }}
                {#<pre>{{ dump(content.field_clinic_image) }}</pre>#}
                {#1. {{ content.field_clinic_image }}#}
                {#2. <img class="swiper-image" src="{{ file_url(node.field_slides[key].entity.uri.value) }}" alt="{{ node.field_slides[key].alt  }}" />#}
                {#3. {{ content.field_clinic_image[key].entity.uri.value | image_style('Large') }}#}
            </div>
            <div class="col-xs-12 l ll">

                <a href="#directions"
                   role="tab"
                   id="directions-tab"
                   data-toggle="tab"
                   aria-controls="directions"
                   aria-expanded="false">
                    {{ 'Driving Directions'|t }}
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </a>


            </div>
            <div class="col-xs-12 l">
                <a href="#">{{ "Call @a.@b.@c"
                    |t({
                        '@a': _cli.seoPhone|slice(0, 3),
                        '@b': _cli.seoPhone|slice(3, 3),
                        '@c': _cli.seoPhone|slice(6, 4)
                    }) }}<i class="fa fa-angle-right"
                            aria-hidden="true"></i>
                </a>

            </div>
            <div class="col-xs-12 l">

                <a href="/patient-care/making-an-appointment">{{ "Make an Appointment"|t }}
                    <i class="fa fa-angle-right" aria-hidden="true"></i></a>


            </div>
            <div class="col-xs-12 get-in-line">
                <h4>{{ "Urgent Care"|t }}
                    <a href="#">Get in line<i class="fa fa-angle-right"
                                              aria-hidden="true"></i>
                    </a></h4>
                <p class="wait">
                    <span class="m">20</span> minutes wait
                </p>
            </div>
        </div>

        <div class="col-sm-8 right">

            <div class="col-sm-12 title">
                {{ title_prefix }}
                <h1{{ title_attributes }}>
                    <a href="{{ url }}" rel="bookmark">{{ label }}</a>
                </h1>
                {{ title_suffix }}

                <address><h4>{{ _cli.address }} <i class="uw-s"></i>
                        {{ _cli.city }},
                        {{ _cli.state }}
                        {{ _cli.zipcode }}
                    </h4></address>
            </div>

            <div class="col-sm-6 times">
                <h4>Primary Care</h4>
                {% set days = {1: 'Monday', 2: 'Tuesday', 3: 'Wednesday', 4: 'Thursday', 5: 'Friday', 6: 'Saturday', 0: 'Sunday'} %}

                {#{% set n = date('w')|number_format %}#}
                {#{% for s in _cli.clinicTimeUseMasters[0].hoursOfOperation %}#}
                {#{{ s.dayOfWeek }} .. {{ n }}#}
                {#{% if s.dayOfWeek == n %}#}
                {#111<p class="opens-at">Opens at {{ s.startTime|date ('g:ia') }}</p>#}
                {#{% endif %}#}
                {#{% endfor %}#}

                <ul>

                    {% for i in 0..6 %}
                        {% set open = false %}

                        <li>

                            {% for s in _cli.clinicTimeUseMasters[0].hoursOfOperation %}
                                {% if s.dayOfWeek == i %}

                                    {% set open = true %}
                                    <span class="day">{{ days[i] }}</span>
                                    <span class="hours"><span>

                                        {{ "@start - @end"
                                        |t({ '@start': s.startTime|date ('g:ia')|trim('m'),
                                            '@end': s.endTime|date ('g:ia')|trim('m')
                                        }) }}
                                    </span></span>

                                {% endif %}
                            {% endfor %}
                            {% if open == false %}

                                <span class="day">{{ days[i] }}</span>
                                <span class="hours"><span>{{ "Closed"|t }}</span></span>

                            {% endif %}

                        </li>

                    {% endfor %}

                </ul>
            </div>

            {% if _cli.clinicTimeUseMasters[1].timeModelName == "Urgent Care Hours" %}
                <div class="col-sm-6 times times-uc">
                    <h4>Urgent Care</h4>
                    <p class="opens-at">Opens at 0am</p>
                    <ul>

                        {% for i in 0..6 %}
                            {% set open = false %}

                            <li>

                                {% for s in _cli.clinicTimeUseMasters[0].hoursOfOperation %}
                                    {% if s.dayOfWeek == i %}

                                        {% set open = true %}
                                        <span class="day">{{ days[i] }}</span>
                                        <span class="hours"><span>

                                         {{ "@start - @end"
                                         |t({ '@start': s.startTime|date ('g:ia')|trim('m'),
                                             '@end': s.endTime|date ('g:ia')|trim('m')
                                         }) }}
                                    </span></span>

                                    {% endif %}
                                {% endfor %}
                                {% if open == false %}

                                    <span class="day">{{ days[i] }}</span>
                                    <span class="hours"><span>{{ "Closed"|t }}</span></span>

                                {% endif %}

                            </li>

                        {% endfor %}


                    </ul>
                </div>
            {% endif %}
            <div class="col-sm-12 foot">
                <p class="u-911">
                    <i class="fa u-911i"></i>
                    {{ "If at anypoint your symptoms worsen or you feel like
                    you are experiencing a medical emergency, call 9-1-1 or
                    proceed to the nearest emergency room."|t }}
                </p>
                {#{{ drupal_block('block_id') }}#}
            </div>
        </div>


    </section>

    <section class="clinic-tabs">


        <div data-example-id="togglable-tabs">
            <ul class="nav nav-tabs" id="myTabs" role="tablist">
                <li role="presentation" class="active"><a href="#services"
                                                          id="services-tab"
                                                          role="tab"
                                                          data-toggle="tab"
                                                          aria-controls="services"
                                                          aria-expanded="true">
                        <i class="fa fa-heartbeat" aria-hidden="true"></i>
                        {{ 'Services & Resources'|t }}

                    </a>
                </li>
                <li role="presentation"><a href="#directions"
                                           role="tab"
                                           id="directions-tab"
                                           data-toggle="tab"
                                           aria-controls="directions"
                                           aria-expanded="false">
                        <i class="fa fa-heartbeat" aria-hidden="true"></i>
                        {{ 'Directions/Parking'|t }}

                    </a>
                </li>
                <li role="presentation"><a href="#providers"
                                           role="tab"
                                           id="providers-tab"
                                           data-toggle="tab"
                                           aria-controls="providers"
                                           aria-expanded="false">
                        <i class="fa fa-heartbeat" aria-hidden="true"></i>
                        {{ 'Care Providers'|t }}

                    </a>
                </li>
            </ul>
            <div class="tab-content">

                <div class="tab-pane fade active in" role="tabpanel"
                     id="services"
                     aria-labelledby="services-tab">

                    <h3>Services</h3>
                    <p class="leader">{{ "This clinic offers primary and urgent care, including:"|t }}</p>
                    <ul>
                        {% for s in _cli.services %}
                            <li>
                                <i class="fa fa-check-circle-o"
                                   aria-hidden="true"></i>
                                {{ s.serviceName|t }}</li>
                        {% endfor %}
                    </ul>
                    {#<div class="view-more"><a href="#">View More <i#}
                                    {#class="fa fa-angle-down"#}
                                    {#aria-hidden="true"></i></a></div>#}


                </div>

                <div class="tab-pane fade" role="tabpanel"
                     id="directions" aria-labelledby="directions-tab">

                    <h3>Directions & Parking</h3>

                    {{ _cli.location.drivingDirections|raw }}

                </div>

                <div class="tab-pane fade" role="tabpanel" id="providers"
                     aria-labelledby="providers-tab">

                    <h3>Care Providers</h3>
                    <div class="row">
                        {% for cn in _cli.careNetworks %}

                            {% for s in cn.bioInformations %}
                                <div class="prov-block col-xs-6 col-sm-4">
                                    <div class="wrapper">
                                        <b>{{ s.fullName }}</b><br>
                                        {% if 'noimage.jpg' not in s.bioImageUrl %}
                                            <img src="{{ s.bioImageUrl }}"
                                                 class="img-thumbnail"><br>
                                        {% endif %}
                                        {{ s.bioIntro | raw }}<br>
                                    </div>


                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>


                </div>
            </div>

        </div>

    </section>


    {% if content.field_content_blocks |render is not empty %}
        <section class="clinic-paragraphs">
            <div class="bg"></div>

            {% if content.field_content_blocks_heading|render is not empty %}
                <h2 class="bi-line"> {{ content.field_content_blocks_heading }}</h2>
            {% endif %}

            {{ content.field_content_blocks }}

        </section>
    {% endif %}


    {% if content.body |render is not empty %}
        <section class="clinic-body">

            <div{{ content_attributes.addClass('content') }}>
                {{ content.body }}
                {#{{ content }}#}
            </div>

        </section>
    {% endif %}


    {% if content.field_bottom_content_blocks |render is not empty %}
        <section class="clinic-foot-paragraphs">

            {% if content.field_bottom_content_blocks_head|render is not empty %}
                <h2 class="bi-line"> {{ content.field_bottom_content_blocks_head }}</h2>
            {% endif %}
            {{ content.field_bottom_content_blocks }}

            {#<div class="view-more hidden"><a href="#">View More <i#}
                            {#class="fa fa-angle-down"#}
                            {#aria-hidden="true"></i></a>#}
            {#</div>#}

        </section>
    {% endif %}

    {#<pre>{{ dump(_cli) }}</pre>#}

</article>
