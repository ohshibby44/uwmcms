{% if _bio.educationHistories %}
    {% for e in _bio.educationHistories|uwm_sort_parts('gradYear')|reverse %}

        <h5>{{ e.institutionName }}</h5>
        {% set ed = [] %}
        {% if e.educationType %}
            {% set ed = ed|merge([e.educationType]) %}
        {% endif %}
        {% if e.gradYear %}
            {% set ed = ed|merge([e.gradYear]) %}
        {% endif %}
        {% if e.specialty %}
            {% set ed = ed|merge([e.specialty]) %}
        {% endif %}

        <p>{{ ed|join(', ') }}</p>

    {% endfor %}
{% endif %}

